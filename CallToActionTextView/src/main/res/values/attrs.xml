<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="actionText" format="string"/>
    <attr name="actionTextColor" format="color" />
    <attr name="isActionUnderlined" format="boolean" />
    <attr name="foregroundColor" format="color" />
    <attr name="collapsedLines" format="integer"/>
    <attr name="isBoldActionText" format="boolean"/>
    <attr name="textMode" format="enum">
        <enum name="length" value="0"/>
        <enum name="line" value="1"/>
    </attr>

    <attr name="learnMoreTextView" format="reference"/>

    <declare-styleable name="LearnMoreTextView">
        <attr name="actionText"/>
        <attr name="textMode"/>
        <attr name="collapsedLines"/>
        <attr name="foregroundColor"/>
        <attr name="isActionUnderlined"/>
        <attr name="isBoldActionText"/>
        <attr name="actionTextColor"/>
    </declare-styleable>
</resources>